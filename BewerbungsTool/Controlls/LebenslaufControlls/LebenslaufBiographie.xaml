<UserControl x:Class="BewerbungsTool.Controlls.LebenslaufBiographie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BewerbungsTool.Controlls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Biografie " FontSize="25" Foreground="Black" FontWeight="Bold"/>

        <TextBox Grid.Row="1" Style="{StaticResource TextBoxPlaxeholder}" AcceptsReturn="True" Tag="Biografie" Text="{Binding Biography}" Background="LightGray" />

    </Grid>
</UserControl>
